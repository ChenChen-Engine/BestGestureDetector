<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <chenchen.engine.gesture.widget.AdsorptionViewGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="50dp"
        android:background="#22884443">

        <chenchen.engine.gesture.widget.ScaleAdsorptionGestureView
            android:id="@+id/gestureView"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:scaleX="0.3"
            android:scaleY="0.3"
            android:layout_gravity="center"
            android:background="#972374" />

    </chenchen.engine.gesture.widget.AdsorptionViewGroup>

    <TextView
        android:id="@+id/tvScale"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:background="#09347274"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>