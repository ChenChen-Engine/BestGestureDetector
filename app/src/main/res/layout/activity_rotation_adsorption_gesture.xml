<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <chenchen.engine.gesture.widget.AdsorptionViewGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="50dp"
        android:background="#22884443">

        <chenchen.engine.gesture.widget.RotateAdsorptionGestureView
            android:id="@+id/gestureView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:background="#972374" />

        <chenchen.engine.gesture.widget.MoveAdsorptionGestureView
            android:layout_width="100dp"
            android:background="#984626"
            android:layout_height="100dp"/>

        <View
            android:layout_gravity="end"
            android:background="#862365"
            android:layout_width="100dp"
            android:layout_height="100dp"/>

        <View
            android:layout_marginTop="120dp"
            android:layout_marginEnd="20dp"
            android:layout_gravity="end"
            android:background="#236865"
            android:layout_width="100dp"
            android:layout_height="100dp"/>

    </chenchen.engine.gesture.widget.AdsorptionViewGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:background="#09347274"
        android:id="@+id/tvRotation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>